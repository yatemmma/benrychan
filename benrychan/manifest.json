{
  "manifest_version": 2,
  "name": "benrychan",
  "version": "0.0.2",

  "description": "Make benry to your work.",
  "icons": {"48": "icon48.png"},
  "author": "yatemmma",

  "update_url": "https://raw.github.com/yatemmma/benrychan/master/updates.xml",

  "permissions": ["tabs", "http://*/*", "https://*/*"],

  "options_page" : "options.html",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "benrychan",
    "default_popup": "popup.html"
  }
}
